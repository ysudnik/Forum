<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>



    <servlet>
        <servlet-name>SportServlet</servlet-name>
        <servlet-class>servlets.SportServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SportServlet</servlet-name>
        <url-pattern>/sport</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AutoServlet</servlet-name>
        <servlet-class>servlets.AutoServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AutoServlet</servlet-name>
        <url-pattern>/auto</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>servlets.RegistrationServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/registrationServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AutorizationServlet</servlet-name>
        <servlet-class>servlets.AutorizationServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AutorizationServlet</servlet-name>
        <url-pattern>/autorizationServlet</url-pattern>
    </servlet-mapping>
</web-app>